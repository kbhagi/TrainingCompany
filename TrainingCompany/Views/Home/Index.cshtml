<header>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">
                <a href="~/">ASP.NET Web API</a>
            </p>
        </div>
    </div>
</header>
<div id="body">
    <ol id="courses"></ol>
</div>
@section scripts
{
    <script>
        $.ajax({
            url: '/api/courses',
            success: function (courses) {
                var list = $('#courses');
                for (var i = 0; i < courses.length; i++) {
                    var course = courses[i];
                    list.append('<li>' + course.title + '</li>');
                }

            }
        });
    </script>
}